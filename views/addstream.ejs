<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Clips Vault - Add a stream</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.10.1/css/all.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/base.css" />
    <link rel="stylesheet" href="/css/loader.css">
    <link rel="stylesheet" href="/css/upload.css">
</head>

<body>
    <%- include('menu.ejs') %>
        <section>
            <div class="main-interface">
                <div class="loader-container">
                    <div class="loader"></div>
                    <span>Upload files...</span>
                    <span>Do not leave this page</span>
                </div>
                <div class="container">
                    <div class="card mt-5">
                        <div class="card-body">
                            <h2 class="text-center">Add A Stream</h2>
                            <form>
                                <div class="form-group">
                                    <label for="streamDate">Stream Date</label>
                                    <input type="date" id="streamDate" class="form-control" required>
                                </div>
            
                                <div class="form-group">
                                    <label for="streamCategory">Stream Category</label>
                                    <input type="text" id="streamCategory" class="form-control" required>
                                    <div id="suggestions"></div>
                                </div>
            
                                <div class="form-group upload-area" onclick="document.getElementById('fileUpload').click()">
                                    <label>Upload Files (Click or Drag and Drop)</label>
                                    <input type="file" id="fileUpload" name="fileUpload" multiple required style="display: none" onchange="displayFiles(this)">
                                </div>
                                <button type="submit" class="btn btn-success">Submit</button>
                                <div id="fileList" class="mt-3">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <script src="/js/upload-form.js"></script>
</body>

</html>